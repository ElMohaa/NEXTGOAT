<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="615.0" prefWidth="315.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.next_goat.Controllers.EditUserController">
   <children>
      <!-- Botón de volver -->
      <Button layoutX="20.0" layoutY="14.0" mnemonicParsing="false" onAction="#back" text="Back" />

      <!-- Etiquetas y TextField para la información del usuario -->
      <Label layoutX="16.0" layoutY="169.0" text="Nombre:" />
      <TextField fx:id="nameField" layoutX="71.0" layoutY="164.0" prefHeight="26.0" prefWidth="90.0" />

      <Label layoutX="174.0" layoutY="169.0" text="Apellido:" />
      <TextField fx:id="surnameField" layoutX="225.0" layoutY="164.0" prefHeight="26.0" prefWidth="76.0" />

      <Label layoutX="19.0" layoutY="202.0" text="Correo:" />
      <TextField fx:id="emailField" layoutX="70.0" layoutY="198.0" prefWidth="180.0" />

      <Label layoutX="18.0" layoutY="236.0" text="Teléfono:" />
      <TextField fx:id="phoneField" layoutX="73.0" layoutY="232.0" prefHeight="26.0" prefWidth="131.0" />

      <Label layoutX="25.0" layoutY="367.0" text="Dirección:" />
      <TextField fx:id="addressField" layoutX="117.0" layoutY="363.0" prefWidth="180.0" />

      <Label layoutX="22.0" layoutY="412.0" text="Usuario:" />
      <TextField fx:id="usernameField" layoutX="85.0" layoutY="408.0" prefHeight="26.0" prefWidth="141.0" />

      <Label layoutX="12.0" layoutY="448.0" text="Contraseña:" />
      <TextField fx:id="passwordField" layoutX="86.0" layoutY="444.0" prefWidth="180.0" />

      <Label layoutX="28.0" layoutY="332.0" text="DNI/NIE:" />
      <TextField fx:id="dniField" layoutX="118.0" layoutY="327.0" prefHeight="26.0" prefWidth="112.0" />

      <Label layoutX="14.0" layoutY="295.0" prefWidth="98.0" text="Fecha Nacimiento:" />
      <TextField fx:id="fechaField" layoutX="117.0" layoutY="291.0" prefHeight="26.0" prefWidth="174.0" />

      <!-- Botón de guardar -->
      <Button layoutX="128.0" layoutY="538.0" mnemonicParsing="false" onAction="#saveUser" text="Guardar" />
      <ImageView fitHeight="118.0" fitWidth="155.0" layoutX="99.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../ICONS/userU.png" />
         </image>
      </ImageView>


   </children>
</AnchorPane>
