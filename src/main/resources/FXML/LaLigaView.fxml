<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.14-internal" fx:controller="org.example.next_goat.Controllers.LaLigaController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Selecciona una liga:" />
        <ComboBox fx:id="leagueComboBox" layoutX="120.0" layoutY="10.0" prefWidth="200.0" />

        <TableView fx:id="clasificacionTable" layoutX="14.0" layoutY="50.0" prefHeight="200.0" prefWidth="350.0">
            <columns>
                <TableColumn fx:id="posicionCol" text="Posición" />
                <TableColumn fx:id="equipoCol" text="Equipo" />
                <TableColumn fx:id="puntosCol" text="Puntos" />
            </columns>
        </TableView>

        <Label layoutX="14.0" layoutY="260.0" text="Buscar equipo:" />
        <TextField fx:id="equipoField" layoutX="120.0" layoutY="256.0" />
        <Button fx:id="buscarButton" layoutX="278.0" layoutY="256.0" mnemonicParsing="false" onAction="#handleBuscarEquipo" text="Buscar" />

        <Label fx:id="partidosLabel" layoutX="14.0" layoutY="290.0" text="Próximos partidos" />
        <ListView fx:id="matchesListView" layoutX="14.0" layoutY="310.0" prefHeight="100.0" prefWidth="350.0" />
    </children>
</AnchorPane>
